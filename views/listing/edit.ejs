<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <!-- Navbar -->
    <%- include('../partials/navbar'); %>
    <!-- End Of Navbar -->

    <main>
      <div class="container-fluid pb-5 mb-3" style="min-height: 300px">
        <div class="row d-flex justify-content-center">
          <div class="col-md-5 mt-5 pt-5">
            <div class="card">
              <div class="card-body">
                <h3 class="text-center py-3 text-uppercase">Edit listing</h3>
                <form
                  action="/listing/<%= listing._id %>?_method=PUT"
                  method="POST"
                >
                  <div class="form-group">
                    <label for="inputName" class="form-label mt-1">Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="inputName"
                      aria-describedby="listingTitle"
                      placeholder="Enter listing title"
                      value="<%= listing.name %>"
                      name="name"
                    />
                  </div>
                  <div class="form-group">
                    <label for="description" class="form-label mt-1"
                      >Description</label
                    >
                    <textarea
                      placeholder="Enter listing description..."
                      class="form-control"
                      name="description"
                      id="description"
                      rows="5"
                    >
<%= listing.description %></textarea
                    >
                  </div>
                  <div class="form-group">
                    <label for="imageUrl" class="form-label mt-1"
                      >Image URL</label
                    >
                    <input
                      type="url"
                      class="form-control"
                      id="imageUrl"
                      aria-describedby="imageUrlHelp"
                      placeholder="Enter image url"
                      name="imageUrl"
                      value="<%= listing.imageUrl %>"
                    />
                  </div>
                  <div class="form-group">
                    <label for="price" class="form-label mt-1">Price</label>
                    <input
                      type="number"
                      class="form-control"
                      id="price"
                      aria-describedby="priceHelp"
                      placeholder="$.00"
                      name="price"
                      value="<%= listing.price %>"
                    />
                  </div>
                  <div class="form-group">
                    <label for="address" class="form-label mt-1"
                      >Location</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="address"
                      placeholder="Enter address"
                      name="address"
                      value="<%= listing.address %>"
                    />
                  </div>
                  <small class="form-text text-muted"
                    >Please put an exact location for accuracy of the
                    geocoding.</small
                  >
                  <button class="btn btn-primary px-3 py-2">Submit</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer'); %> <%- include('../partials/scripts'); %>
  </body>
</html>
